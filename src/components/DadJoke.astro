---
interface Props {
  setup: string;
  punchline: string;
}

const { setup, punchline } = Astro.props;
---
<div class="bg-white/10 backdrop-blur-md rounded-lg shadow-xl p-6 cursor-pointer joke-card transform hover:scale-105 transition-all duration-300" data-aos="fade-up">
  <p class="text-lg font-medium text-gray-200 mb-4">{setup}</p>
  <p class="text-lg font-bold text-purple-300 opacity-0 transform translate-y-4 transition-all duration-300 joke-punchline">{punchline}</p>
</div>

<script>
  document.querySelectorAll('.joke-card').forEach(card => {
    card.addEventListener('click', () => {
      const punchline = card.querySelector('.joke-punchline');
      punchline.classList.toggle('opacity-0');
      punchline.classList.toggle('translate-y-4');
    });
  });
</script>