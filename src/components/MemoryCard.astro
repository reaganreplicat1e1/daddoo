---
interface Props {
  title: string;
  date: string;
  description: string;
}

const { title, date, description } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-md rounded-lg shadow-xl p-6 mb-6 transform hover:scale-105 transition-all duration-300" data-aos="fade-up">
  <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
  <p class="text-sm text-blue-200 mb-4">{date}</p>
  <p class="text-gray-200">{description}</p>
</div>