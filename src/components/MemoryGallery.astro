---
const memories = [
  {
    image: "https://imgur.com/m9dIxdM.jpg",
    title: "Evening Together"
  },
  {
    image: "https://imgur.com/YEqEAbZ.jpg",
    title: "Fine Dining & Family"
  },
  {
    image: "https://imgur.com/NDEzhu6.jpg",
    title: "Christmas Spirit"
  },
  {
    image: "https://imgur.com/wUln2kq.jpg",
    title: "Notre Dame Pride"
  },
  {
    image: "https://imgur.com/ijHTR0s.jpg",
    title: "Legends Legacy"
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {memories.map(memory => (
    <div class="relative h-64 group overflow-hidden rounded-lg shadow-xl" data-aos="fade-up">
      <img 
        src={memory.image} 
        alt={memory.title}
        class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
        <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
          <h3 class="text-2xl font-bold">{memory.title}</h3>
        </div>
      </div>
    </div>
  ))}
</div>