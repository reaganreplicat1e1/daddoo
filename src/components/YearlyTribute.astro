---
interface Props {
  year: number;
  author: string;
  content: string;
}

const { year, author, content } = Astro.props;
---
<div class="bg-white/10 backdrop-blur-md rounded-lg shadow-xl p-8 mb-8" data-aos="fade-up">
  <div class="flex justify-between items-center mb-6">
    <h3 class="text-2xl font-bold text-white">Birthday Tribute {year}</h3>
    <span class="text-purple-300">{author}</span>
  </div>
  <div class="prose prose-lg prose-invert">
    <p class="text-gray-200">{content}</p>
  </div>
  <div class="mt-6 text-right">
    <span class="text-sm text-blue-200">December 6, {year}</span>
  </div>
</div>